<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/luggageW"
        android:layout_width="80dp"
        android:layout_height="29dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toEndOf="@+id/luggageName"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/luggageL"
        android:layout_width="80dp"
        android:layout_height="29dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/luggageW"
        tools:layout_editor_absoluteX="152dp" />

    <TextView
        android:id="@+id/luggageName"
        android:layout_width="98dp"
        android:layout_height="18dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/luggageWidth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="16dp"
        android:text="@string/luggageWidth"
        app:layout_constraintStart_toEndOf="@+id/luggageW"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/luggageLength"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="32dp"
        android:text="@string/luggageLength"
        app:layout_constraintStart_toEndOf="@+id/luggageL"
        app:layout_constraintTop_toBottomOf="@+id/luggageWidth" />

    <TextView
        android:id="@+id/luggageH"
        android:layout_width="80dp"
        android:layout_height="29dp"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@+id/luggageL"
        tools:layout_editor_absoluteX="152dp" />

    <TextView
        android:id="@+id/luggageHeight"
        android:layout_width="101dp"
        android:layout_height="23dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="32dp"
        android:text="luggage height"
        app:layout_constraintStart_toEndOf="@+id/luggageH"
        app:layout_constraintTop_toBottomOf="@+id/luggageLength" />

</android.support.constraint.ConstraintLayout>