<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="230dp"
    android:layout_height="200dp"
    android:orientation="vertical">

    // Name + check box

    <LinearLayout
            android:layout_width="216dp"
            android:layout_height="2dp"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:orientation="horizontal">

        <CheckBox
                android:id="@+id/luggageCheckBox"
                android:layout_width="56dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="onCheckboxClicked"
                android:focusable="false"
                android:checked="false"/>

        <TextView
                android:id="@+id/luggageName"
                android:layout_width="91dp"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:focusable="false"/>

    </LinearLayout>

    <LinearLayout
            android:layout_width="200dp"
            android:layout_height="5dp"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:focusable="false">

        <TextView
                android:id="@+id/luggageH"
                android:layout_width="197dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:focusable="false"/>

        <TextView
                android:id="@+id/luggageHeight"
                android:layout_width="240dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="26dp"
                android:layout_weight="1"
                android:text="luggage height"
                android:focusable="false"/>

    </LinearLayout>
    <LinearLayout
            android:layout_width="200dp"
            android:layout_height="0dp"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:focusable="false">

        <TextView
                android:id="@+id/luggageL"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:focusable="false"/>

        <TextView
                android:id="@+id/luggageLength"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="26dp"
                android:layout_weight="1"
                android:text="luggage length"
                android:focusable="false"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="200dp"
            android:layout_height="0dp"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
    >

        <TextView
                android:id="@+id/luggageW"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:focusable="false"/>

        <TextView
                android:id="@+id/luggageWidth"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="26dp"
                android:layout_weight="1"
                android:text="luggage width"
                android:focusable="false"/>

    </LinearLayout>


</LinearLayout>