<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/carW"
        android:layout_width="80dp"
        android:layout_height="29dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toEndOf="@+id/carName"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/carH"
        android:layout_width="80dp"
        android:layout_height="29dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/carW"
        tools:layout_editor_absoluteX="152dp" />

    <TextView
        android:id="@+id/carName"
        android:layout_width="98dp"
        android:layout_height="18dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/carWidth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="16dp"
        android:text="@string/carWidth"
        app:layout_constraintStart_toEndOf="@+id/carW"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/carHeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="20dp"
        android:text="@string/carHeight"
        app:layout_constraintStart_toEndOf="@+id/carH"
        app:layout_constraintTop_toBottomOf="@+id/carWidth" />

</android.support.constraint.ConstraintLayout>