<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tmu2018.trunkcarassistant">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/TCA_Theme">
        <activity android:name=".activity.MainActivity"
            android:theme="@style/TCA_Theme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.StartActivity"/>
        <activity android:name=".activity.LuggageActivity" />
        <activity android:name=".activity.TrunkActivity" />
        <activity android:name=".activity.AddLuggageActivity" />
        <activity android:name=".activity.AddTrunkActivity" />
        <activity
            android:name=".activity.EditTrunkActivity"
            android:label="@string/title_activity_edit_trunk"
            android:theme="@style/AppTheme.NoActionBar"
            android:noHistory="true"/>
        <activity
            android:name=".adapters.EditLuggageArrayAdapter"
            android:label="@string/title_activity_edit_luggage_array_adapter"
            android:theme="@style/AppTheme.NoActionBar"
            android:noHistory="true"/>
        <activity
            android:name=".activity.EditLuggageActivity"
            android:label="@string/title_activity_edit_luggage"
            android:theme="@style/AppTheme.NoActionBar"
            android:noHistory="true"/>
        <activity
            android:name=".activity.LuggageToEditActivity"
            android:label="@string/title_activity_luggage_to_edit"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>